<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android= "http://schemas.android.com/apk/res/android"  
    android:orientation= "vertical"  
    android:layout_width= "match_parent"  
    android:layout_height= "match_parent" >  
    <TextView  
        android:text= "Adresse"  
        android:textAppearance= "?android:attr/textAppearanceLarge"  
        android:layout_width= "match_parent"  
        android:layout_height= "wrap_content"  
        android:id= "@+id/txtView_Adresse"  />  
    <TextView  
        android:text= "Nom"  
        android:textAppearance= "?android:attr/textAppearanceMedium"  
        android:layout_width= "match_parent"  
        android:layout_height= "wrap_content"  
        android:id= "@+id/txtView_Nom"  />  
    <TextView  
        android:text= "Ville"  
        android:textAppearance= "?android:attr/textAppearanceMedium"  
        android:layout_width= "match_parent"  
        android:layout_height= "wrap_content"  
        android:id= "@+id/txtView_Ville"  />  
     <TextView  
        android:text= "Code Postal"  
        android:textAppearance= "?android:attr/textAppearanceMedium"  
        android:layout_width= "match_parent"  
        android:layout_height= "wrap_content"  
        android:id= "@+id/txtView_Codepostal"  />  
    <TextView  
        android:text= "Latitude"  
        android:textAppearance= "?android:attr/textAppearanceMedium"  
        android:layout_width= "match_parent"  
        android:layout_height= "wrap_content"  
        android:id= "@+id/txtView_Lat"  />  
     <TextView  
        android:text= "Longitude"  
        android:textAppearance= "?android:attr/textAppearanceMedium"  
        android:layout_width= "match_parent"  
        android:layout_height= "wrap_content"  
        android:id= "@+id/txtView_Lng"  />  
    <TextView  
        android:text= "Tarif"  
        android:textAppearance= "?android:attr/textAppearanceMedium"  
        android:layout_width= "match_parent"  
        android:layout_height= "wrap_content"  
        android:id= "@+id/txtView_Tarif"  />  
        <TextView  
        android:text= "ID"  
        android:textAppearance= "?android:attr/textAppearanceMedium"  
        android:layout_width= "match_parent"  
        android:layout_height= "wrap_content"  
        android:id= "@+id/txtView_Id"  />  
</LinearLayout>  

